<div id='header'>
  <h1>Word Definer</h1>
</div>
<div class='page_content'>
  <h2>Word: <span class="highlight_word"><%= @word.term %></span></h2>
  <h3>Definition: <span class="highlight_definition"><%= @definition.meaning %></span></h3>

  <form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="definition">Change definition: </label>
    <br>
    <input id="definition" name="definition" class="form_input" type="text"> 
    <br>
    <br>
    <button class='btn btn-info' type="submit">Update</button>
  </form>
  <br>
  <form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <button class='btn btn-info' type="submit">Delete</button>
  </form>
  <br>
  <a href="/words/<%= @definition.word.id %>">Back to '<%= @definition.word.term %>'</a>
</div>