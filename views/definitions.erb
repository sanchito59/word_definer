<h2>Word: <%= @word.term %></h2>
<h3>Definition: <%= @definition.meaning %> </h3>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="definition">Change definition: </label>
  <br>
  <input id="definition" name="definition" type="text">
  <br>
  <button class='btn btn-info' type="submit">Update definition</button>
</form>
<br>
<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button class='btn btn-info' type="submit">Delete definition</button>
</form>
<br>
<a href="/words/<%= @definition.word.id %>">Back to '<%= @definition.word.term %>'</a>